
<div class='card-body'>
  <div class='row'>
    <p>
      <div class="form-group col-md-3">
        <strong>Nome da Categoria</strong>
        <%= @category.name_category %>
      </div>
    </p>

    <p>
      <div class='form-group col-md-3'>
        <strong>Ordem de Prioridade:</strong>
        <%= @category.priority %>
      </div>
    </p>

    <div class="row mt-4">
      <div class="col-6">

        <%= link_to 'Editar', edit_category_path(@category), class: 'btn btn-warning w-100' %>
      </div> 
                
      <div class="col-6">
      
        <%= link_to 'Voltar', categories_path, class: 'btn btn-danger w-100' %>
      </div> 
    </div>
</div>
